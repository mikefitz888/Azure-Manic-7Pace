<Window x:Class="ManicTimePluginsTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="150*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>
        <TextBox Name="Tracker" Grid.Row="1" Text="{Binding TrackerOutput}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" />
        <TextBox Grid.Row="3" Name="Debug" Text="{Binding DebugOutput}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <TextBlock Height="21" HorizontalAlignment="Left" Margin="6,6,0,0" Name="textBlock1" Text="Tracker" VerticalAlignment="Top" Width="133" />
        <TextBlock Grid.Row="2" Height="23" HorizontalAlignment="Left" Margin="3,5,0,0" Name="textBlock2" Text="Debug" VerticalAlignment="Top" Width="130" />
    </Grid>
</Window>
